@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/hover-min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script> 
</head>



<body style="background-image: url('../Content/pexels-photo-301926%20(1).jpeg ');background-size:cover;background-repeat:no-repeat;">
    <div class="container-fluid">

       
            <div class="row text-center">
                <h1 style="font-family: Times New Roman; color: whitesmoke; text-align: center; font-size: 40px;">Management System Of Maha Maya Polytechnic Of Information Technology  <br></h1>
             
            </div>
        <hr style="border:1px solid white" />
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <a href="/College/Index"><input type="submit" value="Go To Collage >>>" class="  btn btn-block" style="background-color:#0c79c3;color:white; margin:0px;box-shadow:inset 0 0 2em black;border-radius:10px;width:200px;text-align:center;margin-bottom:10px;margin-left:27%" /></a>
            </div>
            <div class="col-sm-4"></div>
        </div>
        <div class="row" style="min-height:442px;">
            <div class="col-sm-4"></div>
            <div class="col-sm-4 panel panel-body" style="border: 2px solid black; opacity: 0.8; filter: alpha(opacity=60);">
                
            
                <div class="col-sm-12 panel panel-body" id="login">
                    <div class="col-sm-12 text-center panel panel-heading" style=" margin-top: -18px; background-color: #0c79c3; box-shadow: inset 0 0 2em black; color: white; font-family:'Times New Roman';min-height:10px; width: 100%;">
                        <p style="font-size:30px;">Login Here</p>
                    </div>
                    <form action="/Home/Index" method="post" name="frmlogin">
                        <div class="row" style="font-size:20px;">
                            <div class="col-sm-12">
                                <div class="form-group" style="color:blue;">
                                    <label>UserName</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class=" fa fa-user"  ></i></span>
                                        <input type="text" class="form-control" id="Username" placeholder="Enter Name" name="Username" required autocomplete="off" maxlength="50"/>
                                    </div>
                                </div>

                                <div class="form-group" style="color:blue;">
                                    <label>Password</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        <input type="password" class="form-control" id="password" placeholder="Enter Email" name="password" required autocomplete="off" maxlength="20"/>
                                    </div>
                                </div>

                            </div>
                            <div class="row" style="margin-bottom:-3%">
                                <div class="col-sm-3 text-center" style="margin-top:2%;">
                                    <input type="submit" value="Submit" name="login" class="btn btn-success btn btn-block" style="background-color:#0c79c3; margin:0px;box-shadow:inset 0 0 2em black;" />
                                </div>
                                <div class="col-sm-6 text-center">
                                </div>
                                <div class="col-sm-3 text-center" style="margin-top:2%;">
                                    <button class="btn btn-block" id="newbtn" type="reset" style="background-color:#0c79c3; margin:0px;box-shadow:inset 0 0 2em black;color:whitesmoke;">Cancel</button>


                                </div>
                            </div>
                        </div>
                    </form>
                </div>


                <div class="col-sm-2"></div>
            </div>
            <div class="col-sm-4"></div>
        </div>

        <div class="row text-center" style="font-family: Times New Roman; min-height: 50px; background-color: #0c79c3; box-shadow: inset 0 0 2em black;  font-family :times new roman; color:whitesmoke; text-align :center; font-size :30px;">
            <p style="margin-top:1%;">Developed & Design by ARCANE PROGRAMMING INFOTECH </p>
        </div>
    </div>
</body>
</html>
